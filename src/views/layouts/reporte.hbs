<script>
  let folio = document.getElementById("folio")
  function fun(){
  let functiona = document.getElementById("a3").value
if(functiona == 1){
    if(folio.value<1){
    document.getElementById("btnpdf").href=""

    }else{
      if(folio.value > {{id}}){
    document.getElementById("btnpdf").href=""

      }else{
    document.getElementById("btnpdf").href="/pdf"+folio.value
      }
    }
  }else if(functiona == 2){
     if(folio.value<1){
    document.getElementById("btnpdf").href=""

    }else{
      if(folio.value > {{id}}){
    document.getElementById("btnpdf").href=""

      }else{
    document.getElementById("btnpdf").href="/devolucion"+folio.value
      }
    }
  }
  }
  folio.addEventListener("keydown", fun)
  folio.addEventListener("keyup", fun)
  folio.addEventListener("paste", fun)
  folio.addEventListener("change", fun)
</script>