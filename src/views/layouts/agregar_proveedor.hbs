<script>
function ocu(){
  if(document.getElementById("aa").style.display=="none"){
  document.getElementById("aa").style.display="block"}
  else{
    document.getElementById("aa").style.display="none"
  }
}
  const busquedaNO = document.getElementById("busquedaNO")
    const busquedaCO = document.getElementById("busquedaCO")
    const busquedaCA = document.getElementById("busquedaCA")

    let array = []
    {{#each proveedor }}
    array.push({
        id: "{{IdProveedor}}",
        Nombre: "{{Nombre}}"
    })
    {{/each}}

            function buscarNO() {
                const texto = busquedaNO.value.toLowerCase()
                
                if (texto == "") {
                    document.getElementById("tblh").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let nombre = array[index].Nombre.toLowerCase()
                    if (nombre.indexOf(texto) !== -1) {
                        document.getElementById(array[index].id).style.display = "block"
                        document.getElementById("tblh").style.display = "block"
                    } else {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                }

            }


            busquedaNO.addEventListener("keyup", buscarNO)
            busquedaNO.addEventListener("keydown", buscarNO)



</script>