<script>
   document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('div.forn  input').forEach( node => node.addEventListener('keypress', e => {
        if(e.keyCode == 13) {
          e.preventDefault();
        }
      }))
    });
function ocu(){
  if(document.getElementById("aa").style.display=="none"){
  document.getElementById("aa").style.display="block"}
  else{
    document.getElementById("aa").style.display="none"
  }
}
  const busquedaNO = document.getElementById("busquedaNO")
    const busquedaCO = document.getElementById("busquedaCO")
    const busquedaCA = document.getElementById("busquedaCA")

    let array = []
    {{#each productos }}
    array.push({
        id: "{{IdProducto}}",
        Descripcion: "{{Descripcion}}",
        Categoria: "{{Categoria}}",
        Proveedor: "{{IdProveedor}}"
    })
    {{/each}}

            function buscarNO() {
                busquedaCO.value=""
                busquedaCA.value=""
                const texto = busquedaNO.value.toLowerCase()
                
                if (texto == "") {
                    document.getElementById("tblh").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let nombre = array[index].Descripcion.toLowerCase()
                    if (nombre.indexOf(texto) !== -1) {
                        document.getElementById(array[index].id).style.display = "block"
                        document.getElementById("tblh").style.display = "block"
                    } else {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                }

            }

            function buscarCO() {
                busquedaNO.value=""
                busquedaCA.value=""
                const texto = busquedaCO.value.toLowerCase()
                if (texto == "") {
                    document.getElementById("tblh").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let colonia = array[index].Proveedor.toLowerCase()
                    if (colonia.indexOf(texto) !== -1) {
                        document.getElementById(array[index].id).style.display = "block"
                        document.getElementById("tblh").style.display = "block"
                    } else {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                }

            }

            function buscarCA() {
                busquedaCO.value=""
                busquedaNO.value=""
                const texto = busquedaCA.value.toLowerCase()
                if (texto == "") {
                    document.getElementById("tblh").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let calle = array[index].Categoria.toLowerCase()
                    if (calle.indexOf(texto) !== -1) {
                        document.getElementById(array[index].id).style.display = "block"
                        document.getElementById("tblh").style.display = "block"
                    } else {
                        document.getElementById(array[index].id).style.display = "none"
                    }
                }

            }
        

            busquedaNO.addEventListener("keyup", buscarNO)
            busquedaNO.addEventListener("keydown", buscarNO)
            busquedaCO.addEventListener("keyup", buscarCO)
            busquedaCO.addEventListener("keydown", buscarCO)
            busquedaCA.addEventListener("keyup", buscarCA)
            busquedaCA.addEventListener("keydown", buscarCA)


</script>

