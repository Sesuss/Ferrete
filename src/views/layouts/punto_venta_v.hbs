<script>

    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('div.forn  input').forEach( node => node.addEventListener('keypress', e => {
        if(e.keyCode == 13) {
          e.preventDefault();
        }
      }))
    });
    let array=[]
    let arrayP=[]
    {{#each producto}}
    array.push({
        IdProducto:"{{IdProducto}}",
        Descripcion:'{{{Descripcion}}}',
        Categoria:"{{Categoria}}",
        PrecioVenta:"{{PrecioVenta}}",
        Existencias:"{{Existencias}}",
        CodeBar:"{{CodeBar}}",
        CodeTru:"{{CodeTruper}}",
        CodePro:"{{CodeProducto}}"
    })
    {{/each}}


    {{#each productos}}
    arrayP.push({
        IdProducto:"{{IdProducto}}",
    })
    {{/each}}

    for(let index=0;index<arrayP.length;index++){
        document.getElementById("id"+arrayP[index].IdProducto).href="/eliminar{{id}}/producto"+arrayP[index].IdProducto
    }

    let CodeBar=document.getElementById("CodeBar")
    let CodeTru=document.getElementById("CodeTru")
    let CodePro=document.getElementById("CodePro")
   
    CodeBar.addEventListener("change", BuCodeBar)
    CodeTru.addEventListener("change", BuCodeTru)
    CodePro.addEventListener("change", BuCodePro)
    CodePro.addEventListener("keydown", BuCodePro)
    CodePro.addEventListener("keyup", BuCodePro)
    CodePro.addEventListener("paste", BuCodePro)
    CodePro.addEventListener("change", BuCodePro)
   function BuCodeBar(){
       CodeTru.value=""
       CodePro.value=""
       let value=0
      for(let index=0;index<array.length;index++){
          if(CodeBar.value===array[index].CodeBar){
              value=1
              document.getElementById("form1").value=array[index].IdProducto
              document.getElementById("form2").value=array[index].Categoria
              document.getElementById("form3").value=array[index].Descripcion
              document.getElementById("form4").value=array[index].PrecioVenta
              document.getElementById("form5").value=array[index].Existencias
              document.getElementById("formC").disabled=false
              document.getElementById("formC").value=1
              document.getElementById("formC").max=array[index].Existencias
              document.getElementById("formbtt").style.display="block"
              index=array.length
          }
      }
      if(value==0){
          alert("No se encontro producto")
          CodeBar.value=""
      }else{
          CodeBar.value=""
      }
   }
   function BuCodeTru(){
       CodeBar.value=""
       CodePro.value=""
       let value=0
      for(let index=0;index<array.length;index++){
          if(CodeTru.value===array[index].CodeTru){
              value=1
               document.getElementById("form1").value=array[index].IdProducto
              document.getElementById("form2").value=array[index].Categoria
              document.getElementById("form3").value=array[index].Descripcion
              document.getElementById("form4").value=array[index].PrecioVenta
              document.getElementById("form5").value=array[index].Existencias
              document.getElementById("formC").disabled=false
              document.getElementById("formC").value=1
              document.getElementById("formC").max=array[index].Existencias
              document.getElementById("formbtt").style.display="block"
              index=array.length
          }
      }
      if(value==0){
          alert("No se encontro producto")
          CodeTru.value=""
      }else{
          CodeTru.value=""
      }
   }
  

   function BuCodePro(){
       CodeTru.value=""
       CodeBar.value=""
       document.getElementById("sel").value=0
       let Des,Pro
       Des=CodePro.value.toLowerCase()
       if(CodePro.value == ""){
            for(let index=0;index<array.length;index++){
                 document.getElementById("Des"+array[index].IdProducto).style.display="none"
            }
       }
      for(let index=0;index<array.length;index++){
          Pro=array[index].Descripcion.toLowerCase()
          if(Pro.indexOf(Des) !== -1){
             document.getElementById("Des"+array[index].IdProducto).style.display="block"
          }else{
             document.getElementById("Des"+array[index].IdProducto).style.display="none"
          }
      }
     
   }

    function sele (){
       let sel = document.getElementById("sel").value
       for(index=0;index<array.length;index++){
           if(sel==array[index].IdProducto){
              document.getElementById("form1").value=array[index].IdProducto
              document.getElementById("form2").value=array[index].Categoria
              document.getElementById("form3").value=array[index].Descripcion
              document.getElementById("form4").value=array[index].PrecioVenta
              document.getElementById("form5").value=array[index].Existencias
              document.getElementById("formC").disabled=false
              document.getElementById("formC").value=1
              document.getElementById("formC").max=array[index].Existencias
              document.getElementById("formbtt").style.display="block"
              index=array.length
           }
       }
    }

</script>